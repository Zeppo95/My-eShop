{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}

<h1 class="text-center my-3">Bienvenue sur E-Shop</h1>

<div class="row">
        <div class="col-12 mx-auto">
            {% include "include/_flashes.html.twig" %}        
        </div>
    </div>


<div class="row justify-content-center d-flex">

    {% for produit in produits %}        
    
    <div class="col-3 mx-2">
            <div class="card" style="width: 18rem;">
                <img src="{{ asset('uploads/' ~ produit.photo) }}" class="card-img-top" alt="une photo" style="object-fit: contain;" width="150" height="220">
                <div class="card-body">                    
                    <h5 class="card-title">{{ produit.title }}</h5>
                    <p class="card-text">{{ produit.description | length > 31 ? produit.description | slice(0, 31) ~ '...' : produit.description }}</p>
                    <h5 class="card-title">{{ produit.price }} â‚¬</h5>
                    <a href="{{ path('panier_add', {'id': produit.id}) }}" class="col-12 btn btn-warning text-center" title="Ajouter au panier"><i class="fa-solid fa-cart-plus"></i></a>
                </div>
            </div>
    </div>
    
    {% else %}

        <h3 class="text-center text-warning">La boutique est vide</h3>

    {% endfor %}

</div>

    {% endblock %}